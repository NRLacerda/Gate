	<body class="body">
		{{#each list}}
			<div class="margin">
				<div class="content">
					<h1>ID {{id}}</h1>
					<h1>Nível: {{criticidade}}</h1>
					<h1>Por: {{solicitante}}</h1>
					<h1>{{descricao}}</h1>
					<h1>{{createdAt}}</h1>
				</div>
			</div>
		{{/each}}
		<a href="./cadtodo"><button> Nova Solicitação </button></a>
	</body>
